.chart {
  color: #2E2D2C;
  padding: 25rpx;
}
.chart .nav {
  background-color: #FEDB5A;
  position: relative;
}
.chart .nav .right-sel {
  position: relative;
}
.chart .nav .right-sel:before {
  content: '';
  height: 30rpx;
  width: 2rpx;
  background-color: #999897;
  position: absolute;
  left: 0;
  bottom: 28rpx;
}
.chart .nav .year,
.chart .nav .right-sel {
  width: 160rpx;
  height: 80rpx;
  font-weight: bold;
}
.chart .nav .year-list {
  position: fixed;
  z-index: 99;
  left: 25rpx;
  top: 105rpx;
  width: 160rpx;
  background-color: #FEDB5A;
}
.chart .nav .year-list .year-scroll {
  height: 500rpx;
}
.chart .nav .year-list .year-scroll .year-item {
  font-weight: bold;
  padding-left: 15rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #ededef;
}
.chart .nav .year-list .year-scroll .year-item:first-child {
  border-top: 1rpx solid #ededef;
}
.chart .nav .day-list {
  position: fixed;
  z-index: 99;
  right: 25rpx;
  top: 105rpx;
  width: 160rpx;
  background-color: #FEDB5A;
}
.chart .nav .day-list .day-scroll {
  height: 500rpx;
}
.chart .nav .day-list .day-scroll .day-item {
  text-align: center;
  font-weight: bold;
  margin-left: 6rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #ededef;
}
.chart .nav .day-list .day-scroll .day-item:first-child {
  border-top: 1rpx solid #ededef;
}
.chart .nav .month {
  width: calc(100% - 320rpx);
  height: 80rpx;
  white-space: nowrap;
}
.chart .nav .month .month-type {
  display: inline-block;
  padding: 20rpx;
  font-weight: bold;
  color: #999897;
}
.chart .nav .month .month-type text {
  padding: 5rpx;
}
.chart .nav .month .isActiveM {
  color: #2E2D2C;
  border-bottom: 4rpx solid #2E2D2C;
}

